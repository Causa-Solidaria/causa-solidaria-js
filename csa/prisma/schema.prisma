generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int     @id @default(autoincrement())
  public_id String  @default(uuid())
  title     String
  detail    String?
  slug      String  @unique
}

model Causas {
  id          Int      @id @default(autoincrement())
  public_id   String   @default(uuid())
  title       String
  description String
  thumbnail   String
  createdAt   DateTime @default(now())
  // outros campos que vocÃª precise
}
